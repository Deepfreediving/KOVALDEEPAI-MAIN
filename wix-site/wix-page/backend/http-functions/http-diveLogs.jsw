/**
 * POST: Save dive log data directly to Wix DiveLogs collection
 * üöÄ SIMPLIFIED: No external APIs, just Wix collections
 */
export async function post_diveLogs(request) {
  const startTime = Date.now();
  const version = getApiVersion(request);
  
  try {
    console.log("üíæ Wix HTTP Function: Saving dive log to DiveLogs collection...");
    const requestData = await request.body.json();
    
    console.log("üìã Received dive log data:", {
      userId: requestData.userId,
      diveDate: requestData.diveDate,
      discipline: requestData.discipline,
      reachedDepth: requestData.reachedDepth,
      location: requestData.location
    });
    
    // Validation
    const validationErrors = validateDiveLog(requestData, version);
    if (validationErrors.length > 0) {
      console.error("‚ùå Validation failed:", validationErrors);
      trackMetrics(version, 'save', Date.now() - startTime, true);
      return createResponse(400, {
        error: 'Validation failed',
        details: validationErrors,
        success: false
      }, request);
    }
    
    // üöÄ SIMPLIFIED: Prepare data for Wix DiveLogs collection
    const diveLogData = {
      ...requestData,
      _createdDate: new Date(),
      _updatedDate: new Date(),
      apiVersion: version,
      submissionTimestamp: new Date().toISOString(),
      dataSource: 'wix-http-function'
    };
    
    console.log("üíæ Saving to Wix DiveLogs collection...");
    
    // Save directly to Wix DiveLogs collection
    const result = await wixData.save(DIVELOGS_CONFIG.COLLECTION_NAME, diveLogData);
    
    const duration = Date.now() - startTime;
    trackMetrics(version, 'save', duration);
    
    console.log("‚úÖ Dive log saved successfully:", {
      _id: result._id,
      userId: result.userId,
      duration: `${duration}ms`
    });
    
    return createResponse(200, {
      success: true,
      data: result,
      _id: result._id,
      version: version,
      performance: { 
        duration: `${duration}ms`,
        version: version
      }
    }, request);
    
  } catch (error) {
    const duration = Date.now() - startTime;
    trackMetrics(version, 'save', duration, true);
    
    console.error('‚ùå Error saving dive log to Wix collection:', error);
    return createResponse(500, {
      error: 'Failed to save dive log',
      details: error.message,
      success: false,
      version: version
    }, request);
  }
}

/**
 * GET: Retrieve dive logs from Wix DiveLogs collection
 * üöÄ SIMPLIFIED: No semantic search, just efficient Wix queries
 */
export async function get_diveLogs(request) {
  const startTime = Date.now();
  const version = getApiVersion(request);
  
  try {
    const { userId, limit = 50, search, discipline, dateFrom, dateTo } = request.query;
    
    console.log("üîç Wix HTTP Function: Querying DiveLogs collection...", {
      userId: userId ? "***" + userId.slice(-4) : "missing",
      limit,
      search: search || "none",
      discipline: discipline || "any"
    });
    
    if (!userId) {
      trackMetrics(version, 'query', Date.now() - startTime, true);
      return createResponse(400, {
        error: 'userId is required',
        success: false
      }, request);
    }
    
    // üöÄ SIMPLIFIED: Build efficient Wix query - no external APIs
    let query = wixData.query(DIVELOGS_CONFIG.COLLECTION_NAME)
      .eq('userId', userId)
      .limit(Math.min(parseInt(limit), 100)) // Cap at 100
      .descending('_createdDate'); // Sort by creation date for consistency
    
    // Add filters
    if (discipline) {
      query = query.eq('discipline', discipline);
    }
    
    if (dateFrom) {
      query = query.ge('diveDate', dateFrom);
    }
    
    if (dateTo) {
      query = query.le('diveDate', dateTo);
    }
    
    // üöÄ SIMPLIFIED: Basic text search in Wix collection fields
    if (search) {
      query = query.or(
        wixData.query(DIVELOGS_CONFIG.COLLECTION_NAME).contains('notes', search),
        wixData.query(DIVELOGS_CONFIG.COLLECTION_NAME).contains('location', search),
        wixData.query(DIVELOGS_CONFIG.COLLECTION_NAME).contains('discipline', search)
      );
    }
    
    // Execute query
    console.log("üìä Executing Wix collection query...");
    const results = await query.find();
    
    const duration = Date.now() - startTime;
    trackMetrics(version, 'query', duration);
    
    console.log("‚úÖ Query completed:", {
      itemsFound: results.items.length,
      totalCount: results.totalCount,
      duration: `${duration}ms`
    });
    
    const response = {
      success: true,
      data: results.items,
      totalCount: results.totalCount,
      hasNext: results.hasNext(),
      version: version,
      performance: {
        duration: `${duration}ms`,
        queryOptimization: results.items.length > 0 ? 'indexed' : 'scan',
        source: 'wix-collection-direct'
      }
    };
    
    return createResponse(200, response, request);
    
  } catch (error) {
    const duration = Date.now() - startTime;
    trackMetrics(version, 'query', duration, true);
    
    console.error('‚ùå Error retrieving dive logs from Wix collection:', error);
    return createResponse(500, {
      error: 'Failed to retrieve dive logs',
      details: error.message,
      success: false,
      version: version
    }, request);
  }
}

/**
 * PUT: Update existing dive log
 */
export async function put_diveLogs(request) {
  const startTime = Date.now();
  const version = getApiVersion(request);
  
  try {
    const { diveLogId } = request.query;
    const updateData = await request.body.json();
    
    if (!diveLogId) {
      trackMetrics(version, 'save', Date.now() - startTime, true);
      return createResponse(400, {
        error: 'diveLogId is required',
        success: false
      }, request);
    }
    
    // Validation
    const validationErrors = validateDiveLog(updateData, version);
    if (validationErrors.length > 0) {
      trackMetrics(version, 'save', Date.now() - startTime, true);
      return createResponse(400, {
        error: 'Validation failed',
        details: validationErrors,
        success: false
      }, request);
    }
    
    // Prepare update
    const updatePayload = {
      _id: diveLogId,
      ...updateData,
      _updatedDate: new Date(),
      lastModifiedVersion: version
    };
    
    const result = await wixData.update(DIVELOGS_CONFIG.COLLECTION_NAME, updatePayload);
    
    const duration = Date.now() - startTime;
    trackMetrics(version, 'save', duration);
    
    return createResponse(200, {
      success: true,
      data: result,
      version: version,
      performance: { duration: `${duration}ms` }
    }, request);
    
  } catch (error) {
    const duration = Date.now() - startTime;
    trackMetrics(version, 'save', duration, true);
    
    console.error('‚ùå Error updating dive log:', error);
    return createResponse(500, {
      error: 'Failed to update dive log',
      details: error.message,
      success: false,
      version: version
    }, request);
  }
}

/**
 * DELETE: Remove dive log
 */
export async function delete_diveLogs(request) {
  const startTime = Date.now();
  const version = getApiVersion(request);
  
  try {
    const { diveLogId } = request.query;
    
    if (!diveLogId) {
      trackMetrics(version, 'query', Date.now() - startTime, true);
      return createResponse(400, {
        error: 'diveLogId is required',
        success: false
      }, request);
    }
    
    await wixData.remove(DIVELOGS_CONFIG.COLLECTION_NAME, diveLogId);
    
    const duration = Date.now() - startTime;
    trackMetrics(version, 'query', duration);
    
    return createResponse(200, {
      success: true,
      message: 'Dive log deleted successfully',
      version: version,
      performance: { duration: `${duration}ms` }
    }, request);
    
  } catch (error) {
    const duration = Date.now() - startTime;
    trackMetrics(version, 'query', duration, true);
    
    console.error('‚ùå Error deleting dive log:', error);
    return createResponse(500, {
      error: 'Failed to delete dive log',
      details: error.message,
      success: false,
      version: version
    }, request);
  }
}

