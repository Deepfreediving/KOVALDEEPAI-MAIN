{
  "version": 2,
  "buildCommand": "cd apps/web && npm run build",
  "installCommand": "npm install",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD -- . ':(exclude)wix-site/**' ':(exclude)Wix App/**' ':(exclude)wix page/**' ':(exclude)wix guides/**'",
  "outputDirectory": "apps/web/.next",
  "env": {
    "VERCEL_FORCE_NO_BUILD_CACHE": "1"
  },
  "functions": {
    "pages/api/**/*.js": {
      "maxDuration": 45
    },
    "pages/api/**/*.ts": {
      "maxDuration": 45
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, x-vercel-protection-bypass"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}
