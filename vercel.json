{
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "PINECONE_API_KEY": "your-pinecone-api-key",
    "PINECONE_ENV": "your-pinecone-region",
    "OPENAI_API_KEY": "your-openai-api-key",
    "OPENAI_MODEL": "your-openai-model",
    "OPENAI_API_BASE": "your-openai-api-base"
  }
}
