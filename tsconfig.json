{
  "compilerOptions": {
    "target": "es6",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,                        // âœ… allow JavaScript files
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@types/*": ["types/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "next-env.d.ts",
    "types/**/*.d.ts",
    ".next/types/**/*.ts",
    "next.config.js",
    "vercel.json"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ]
}
