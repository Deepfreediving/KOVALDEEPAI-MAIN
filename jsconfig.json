{
  "compilerOptions": {
    "baseUrl": ".",  // Base directory for resolving modules
    "paths": {
      "@lib/*": ["app/lib/*"],  // Correctly map the alias to the right directory
      "@components/*": ["app/components/*"],
      "@pages/*": ["app/pages/*"],
      "@styles/*": ["app/styles/*"],
      "@/*": ["app/*"]
    },
    "jsx": "react-jsx"  // Optional, if using JSX with React
  },
  "include": [
    "app/**/*",
    "pages/**/*",  // Include pages
    "components/**/*",  // Include components
    "next.config.js",
    "vercel.json"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
