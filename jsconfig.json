{
  "compilerOptions": {
    "baseUrl": ".",  // Base directory for resolving modules
    "paths": {
      "@lib/*": ["pages/lib/*"],  // Correctly map the alias to the right directory
      "@components/*": ["pages/components/*"],
      "@pages/*": ["pages/pages/*"],
      "@styles/*": ["pages/styles/*"],
      "@/*": ["pages/*"]
    },
    "jsx": "react-jsx"  // Optional, if using JSX with React
  },
  "include": [
    "pages/**/*",
    "pages/**/*",  // Include pages
    "components/**/*",  // Include components
    "next.config.js",
    "vercel.json"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
