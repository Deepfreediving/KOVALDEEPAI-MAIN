{
  "compilerOptions": {
    "baseUrl": ".",  // Root directory
    "paths": {
      "@lib/*": ["lib/*"],  // Correct mapping of the alias to lib
      "@components/*": ["pages/components/*"],
      "@pages/*": ["pages/pages/*"],
      "@styles/*": ["pages/styles/*"],
      "@/*": ["pages/*"]
    },
    "jsx": "react-jsx"  // JSX support for React
  },
  "include": [
    "pages/**/*",  // Include pages
    "components/**/*",  // Include components
    "next.config.mjs",
    "vercel.json"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
